{
  "name": "naves",
  "version": "1.0.0",
  "description": "Powerful JavaScript utility library.",
  "main": "./dist/bundle.js",
  "scripts": {
    "build": "webpack --mode='production' && git add ./dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "webpack --mode='development' --watch",
    "test": "mocha --recursive ./src/tests",
    "validate": "npm run lint && npm test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run build && npm run validate",
      "post-merge": "npm install"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/narekkeryan/naves.git"
  },
  "keywords": [
    "naves",
    "javascript",
    "utilities",
    "modules"
  ],
  "author": "Narek Keryan <narek.keryan@gmail.com> (https://nkgdev.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/narekkeryan/naves/issues"
  },
  "homepage": "https://github.com/narekkeryan/naves#readme",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^13.0.0",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "husky": "^4.3.8",
    "mocha": "^7.2.0",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}
